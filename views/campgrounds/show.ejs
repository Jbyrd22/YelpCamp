<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img src="<%= campground.image %>" class="image-responsive">
				<div class="caption">
					<% if(campground.price.length > 0 ) { %>
						<h4 class="pull-right">$<%= campground.price %>/per night</h4>
					<% } else { %>
						<h4 class="pull-right">$0.00/per night</h4>
					<% } %>
					<h4><a><%= campground.name %></a></h4>
					<p><%= campground.description %></p>
					<p><em>Submitted By - </em><%= campground.author.username %></p>
					<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Update Campground</a>
						<form class="delete" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger" name="button">Delete</button>
						</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach((comment) => { %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 Days ago</span>
							<p><%= comment.text %></p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
								<a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
								<form class="delete" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
									<button class="btn btn-xs btn-danger">Delete</button>
								</form>
							<% } %>
						</div>
					</div>
				<% }); %>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>
